---
interface Props {
  title: string;
  body: string;
  href: string;
}

const { href, title, body } = Astro.props;
---

<div id="card">
  <a target="_blank" href={href}>
    <h2>
      {title}
    </h2>
    <p>
      {body}
    </p>
  </a>
</div>

<script>
  
</script>

<style>
  #card {
    display: block;
    padding: 20px;
    background-color: #23262d;
    background-image: none;
    border-radius: 7px;
    margin-bottom: 1rem;
    max-width: 20rem;
    &:hover{
      background-color: white;
      
    }
  }
  #card > a {
    text-decoration: none;
    line-height: 1.4;
    border-radius: 8px;
    color: white;
    background-color: #23262d;
    opacity: 0.8;
  }
  h2 {
    margin: 0;
    font-size: 1.25rem;
    transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
  p {
    margin-top: 0.5rem;
    margin-bottom: 0;
  }
</style>
